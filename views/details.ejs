<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="details content">
    <h2><%= device.title %></h2>
    <div class="content">
      
      

      <p>Updated at: <%= device.title %></p>
      <p>Updated at: <%= device.snippet %></p>
      <p>Updated at: <%= device.ip_address %></p>
      <p>Updated at: <%= device.room_number %></p>
      <p>Updated at: <%= device.mac_address %></p>

      



      


      <p>Updated at: <%= device.updatedAt %></p>


    </div>
    
    <a class="delete" data-doc="<%= device._id %>">
      <img src="/trashcan.svg" alt="delete icon">
    </a>
  </div>

  <%- include("./partials/footer.ejs") %>

  <script>
    const trashcan = document.querySelector('a.delete');

    trashcan.addEventListener('click', (e) => {
      const endpoint = `/devices/${trashcan.dataset.doc}`;

      fetch(endpoint, {
        method: 'DELETE',
      })
      .then(response => response.json())
      .then(data => window.location.href = data.redirect)
      .catch(err => console.log(err));
    });
    
  </script>
</body>
</html>